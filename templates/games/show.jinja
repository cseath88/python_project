{% extends 'base.jinja' %}

{% block content %}
<h1> {{games.title}} </h1>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Stock Level</th>
        <th>Buy Price</th>
        <th>Sell Price</th>
        <th>Buy Price</th>
    </tr>
    <tr>
        <td>Apples</td>
        <td>$1.99</td>
        <td>10</td>
    </tr>
    <tr>
        <td>Bananas</td>
        <td>$0.99</td>
        <td>15</td>
    </tr>
</table>
<p>{{ games.description }}</p>
<p>{{ games.stock_level }}</p>
<p>{{ games.buy_price }}</p>
<p>{{ games.sell_price }}</p>
<p>{{ games.platform.platform_name }}</p>
<p>Current stock: {{ games.stock_level }}</p>
<form action="/games/{{ games.id }}/delete" method="POST">
        <input class="btn btn--danger" type="submit" value="delete"/>
</form>

<p><a href="/games/{{games.id}}/edit">Edit</a></p>

<td><a href="/games"> Back to all games </a></td>
{% endblock %}