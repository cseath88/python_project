{% extends 'base.jinja' %}

{% block content %}
<h1> Make Changes To A Game</h1>
<form action="/games/{{game.id}}" method="post">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{game.title}}" required autofocus>
    </div>

    <div>
        <label for="description" class="description-label">Description:</label>
        <input type="text" id="description" name="description" value="{{game.description}}"> 
    </div>

    <div>
        <label for="stock-level">Stock Level:</label>
        <input type="text" id="stock-level" name="stock_level" value="{{game.stock_level}}">
    </div>

    <div>
        <label for="buy-price">Buy Price:</label>
        <input type="text" id="buy-price" name="buy_price" value="{{game.buy_price}}">
    </div>

    <div>
        <label for="sell-price">Sell Price:</label>
        <input type="text" id="sell-price" name="sell_price" value="{{game.sell_price}}">
    </div>

    <div>
        <label for="platform">Platform:</label>
        <select id="platform" name="platform_id">
        {% for platform in platforms %}
            <option value="{{ platform.id }}"
            {% if game.platform.id == platform.id %} selected="selected"{% endif %}>
            {{ platform.platform_name }}
            </option>
        {% endfor %}
        </select>
    </div>

    <button type="submit">Submit</button>

</form>

{% endblock %}